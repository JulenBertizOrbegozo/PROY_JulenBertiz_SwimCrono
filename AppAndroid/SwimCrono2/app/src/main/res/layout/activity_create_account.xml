<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InicioSesion.CreateAccountActivity"
    android:background="@color/app_background">
    <LinearLayout 
        android:id="@+id/layoutTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crear cuenta"
            android:textSize="@dimen/UnderTitle"
            android:textColor="@color/app_text"/>
        
    </LinearLayout>
    <LinearLayout
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/layoutTop"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/app_text_llamativo"
            android:textSize="@dimen/title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text"
            android:textColor="@color/app_text"
            android:text="Únete y mejora tus tiempos hoy mísmo"/>
        
    </LinearLayout>
    <LinearLayout
        android:id="@+id/datos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/titulo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="20dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Nombre completo"
            android:textColor="@color/app_text"
            android:textSize="@dimen/text"
            android:layout_marginTop="5dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/app_backgroundCard"
            android:layout_marginTop="10dp"
            android:padding="20dp">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"/>
            <EditText
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:text="swimmer@example.com"
                android:textSize="@dimen/text"
                android:textColor="@color/app_text"
                android:layout_marginStart="50dp"
                android:layout_marginTop="5dp"/>
        </com.google.android.material.card.MaterialCardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Correo electrónico"
            android:textColor="@color/app_text"
            android:textSize="@dimen/text"
            android:layout_marginTop="5dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/app_backgroundCard"
            android:layout_marginTop="10dp"
            android:padding="20dp">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp" />
            <EditText
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:text="swimmer@example.com"
                android:textSize="@dimen/text"
                android:textColor="@color/app_text"
                android:layout_marginStart="50dp"
                android:layout_marginTop="5dp"/>
        </com.google.android.material.card.MaterialCardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Contraseña"
            android:textColor="@color/app_text"
            android:textSize="@dimen/text"
            android:layout_marginTop="5dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/app_backgroundCard"
            android:layout_marginTop="10dp"
            android:padding="20dp">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:contentDescription="TODO" />
            <EditText
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:text="swimmer@example.com"
                android:textSize="@dimen/text"
                android:textColor="@color/app_text"
                android:layout_marginStart="50dp"
                android:layout_marginTop="5dp"/>
        </com.google.android.material.card.MaterialCardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Confirmar contraseña"
            android:textColor="@color/app_text"
            android:textSize="@dimen/text"
            android:layout_marginTop="5dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/app_backgroundCard"
            android:layout_marginTop="10dp"
            android:padding="20dp">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:contentDescription="TODO" />
            <EditText
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:text="swimmer@example.com"
                android:textSize="@dimen/text"
                android:textColor="@color/app_text"
                android:layout_marginStart="50dp"
                android:layout_marginTop="5dp"/>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
    <Button
        android:id="@+id/btnCrearCuenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@color/app_button"
        android:text="Crear cuenta"
        android:textColor="@color/app_background"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/datos"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Ya tienes una cuenta?"
            android:textSize="@dimen/text"
            android:textColor="@color/app_text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Iniciar sesión"
            android:textSize="@dimen/text"
            android:textColor="@color/app_text_llamativo"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>