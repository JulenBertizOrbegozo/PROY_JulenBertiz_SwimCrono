<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="14dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/app_card_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp">

            <!-- FILA SUPERIOR -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtPrueba"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="50m Libre"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/app_text" />

                <TextView
                    android:id="@+id/txtTiempo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20.91"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/app_text_llamativo" />
            </LinearLayout>

            <!-- FILA NADADOR + WR -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txtNadador"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="César Cielo"
                    android:textColor="@color/app_text"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" · "
                    android:textColor="@color/app_text" />

                <TextView
                    android:id="@+id/txtAnio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2009"
                    android:textColor="@color/app_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtFecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18 DIC"
                    android:textSize="13sp"
                    android:textColor="@color/app_text" />
            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
