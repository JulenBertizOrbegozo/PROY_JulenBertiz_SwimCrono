<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Paginas.PuntosFINAActivity"
    android:background="@color/app_background">

    <LinearLayout
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_text"
            android:textSize="@dimen/text"
            android:text="Calcular Puntos FINA"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardPuntos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/titulo"
        app:cardBackgroundColor="@color/app_backgroundCard"
        app:cardCornerRadius="16dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <TextView
                android:id="@+id/resultadotxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resultado estimado"
                android:textSize="@dimen/text"
                android:textColor="@color/app_text"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="842"
                    android:textSize="@dimen/title"
                    android:textColor="@color/app_text"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" pts"
                    android:textSize="@dimen/text"
                    android:textColor="@color/app_text"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cardPuntos"
        android:layout_margin="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text"
            android:textColor="@color/app_text"
            android:text="GÃ©nero"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardMasc"
                android:layout_width="180dp"
                android:layout_height="40dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/app_backgroundCard">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Masculino"
                    android:textColor="@color/app_text"
                    android:textSize="@dimen/text"
                    android:layout_gravity="center"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardFem"
                android:layout_marginStart="10dp"
                android:layout_width="180dp"
                android:layout_height="40dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/app_backgroundCard">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Femenino"
                    android:textColor="@color/app_text"
                    android:textSize="@dimen/text"
                    android:layout_gravity="center"/>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text"
            android:textColor="@color/app_text"
            android:layout_marginTop="10dp"
            android:text="Piscina"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardPiscinaCorta"
                android:layout_width="180dp"
                android:layout_height="40dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/app_backgroundCard">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25m"
                    android:textColor="@color/app_text"
                    android:textSize="@dimen/text"
                    android:layout_gravity="center"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardPiscinaLarga"
                android:layout_marginStart="10dp"
                android:layout_width="180dp"
                android:layout_height="40dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/app_backgroundCard">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50m"
                    android:textColor="@color/app_text"
                    android:textSize="@dimen/text"
                    android:layout_gravity="center"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estilo"
                    android:textColor="@color/app_text"
                    android:textSize="@dimen/text"/>
                <Spinner
                        android:id="@+id/opcionEstilos"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/app_backgroundCard"
                        />
            </LinearLayout>
            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distancia"
                    android:textColor="@color/app_text"
                    android:textSize="@dimen/text"/>
                <Spinner
                        android:id="@+id/opcionDistancia"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/app_backgroundCard"
                        />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height= "wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiempo oficial"
                android:textSize="@dimen/text"
                android:textColor="@color/app_text"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/app_backgroundCard"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/app_text"
                    android:textSize="@dimen/title"
                    android:layout_marginVertical="10dp"
                    android:text="00:00.00"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MM:SS.ms"/>
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calcular"
            android:backgroundTint="@color/app_button"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
